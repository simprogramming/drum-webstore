<div id="carousel-item-<%= @item.id %>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @item.photos.each_with_index do |photo, index| %>
      <% if index == 0 %>
        <div class="carousel-item active text-white text-center">
          <%= cl_image_tag photo.key, height: 400, width: 450, crop: :fit %>
        </div>
      <% else  %>
        <div class="carousel-item">
          <%= cl_image_tag photo.key, height: 400, width: 450, crop: :fit %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel-item-<%= @item.id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-item-<%= @item.id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

