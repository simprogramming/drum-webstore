<%= render 'shared/navbar' %>
<div class="banner">
  <h2>Drum FX</h2>
</div>

<div class="container my-5 shop">
  <p class="text-left">Drum Shop</p>
</div>

</hr>

<div class="container">
  <div class="cards">
    <% @items.each do |item| %>
      <% item.photos.each_with_index do |photo, index| %>
        <% if index == 0 %>
          <%= link_to (cl_image_tag photo.key, width: 400, height: 300, crop: :fit), item_path(item) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

